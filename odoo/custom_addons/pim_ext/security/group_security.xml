<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.module.category" id="module_category_pim_ext">
        <field name="name">Pim</field>
        <field name="description">Helps to manage Product management.</field>
        <field name="sequence">20</field>
    </record>

    <record id="attribute_group_user_group" model="res.groups">
        <field name="name">Attribute Group Manager</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <record id="group_custom_view" model="res.groups">
        <field name="name">Custom List View </field>
    </record>
    <record id="group_general_user" model="res.groups">
        <field name="name">General User</field>
        <field name="category_id" ref="pim_ext.module_category_pim_ext"/>
    </record>
    <record id="group_admin_user" model="res.groups">
        <field name="name">Admin Group</field>
        <field name="implied_ids" eval="[(4, ref('group_general_user'))]"/>
        <field name="category_id" ref="pim_ext.module_category_pim_ext"/>
    </record>

    <!-- Record Rule for Admin Group -->
    <record id="record_rule_admin" model="ir.rule">
        <field name="name">Admin Group Rule</field>
        <field name="model_id" ref="model_supplier_info"/>
        <field name="groups" eval="[(4, ref('pim_ext.group_admin_user'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

    <!-- Record Rule for General User Group -->
    <record id="record_rule_general_user" model="ir.rule">
        <field name="name">General User Group Rule</field>
        <field name="model_id" ref="model_supplier_info"/>
        <field name="groups" eval="[(4, ref('pim_ext.group_general_user'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record>

</odoo>
