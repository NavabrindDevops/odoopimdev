<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="delete_family_wizard_form" model="ir.ui.view">
        <field name="name">delete.family.wizard.form.view</field>
        <field name="model">delete.family.wizard</field>
        <field name="arch" type="xml">
            <form string="Assign Alternate Family">
                <sheet>
                    <group>
                        <group>
                            <field name="family_id"/>
                            <field name="current_family_id" readonly="1"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="change_family" type="object" string="Change" class="btn-primary"/>
                    <button string="Discard" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>