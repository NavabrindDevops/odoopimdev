<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_tree_product_brand" model="ir.ui.view">
            <field name="name">product.brand.tree.view</field>
            <field name="model">product.brand</field>
            <field name="arch" type="xml">
                <list default_order="create_date desc">
                    <field name="name"/>
                    <field name="website"/>
                    <field name="description"/>
                    <field name="completeness" widget="progressbar" nolabel="1" optional="hide"/>
                </list>
            </field>
        </record>

        <record id="view_form_product_brand" model="ir.ui.view">
            <field name="name">product.brand.form.view</field>
            <field name="model">product.brand</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="completeness" widget="progressbar"/>
                    </header>
                    <sheet>
                        <field name="brand_logo" widget='image' class="oe_avatar"/>
                        <group>
                            <group string="Brand Information">
                                <field name="name"/>
                                <field name="website"/>
                                <field name="description" placeholder="Enter here..."/>
                            </group>
                        </group>
                    </sheet>
                    <chatter/>
<!--                    <div class="oe_chatter">-->
<!--                        <field name="message_follower_ids" groups="base.group_user" options="{'post_refresh': 'recipients'}"/>-->
<!--                        <field name="activity_ids"/>-->
<!--                        <field name="message_ids"/>-->
<!--                    </div>-->
                </form>
            </field>
        </record>

        <record id="search_product_brand_information" model="ir.ui.view">
            <field name="name">search.product.brand.info</field>
            <field name="model">product.brand</field>
            <field name="arch" type="xml">
                <search string="Product Brand">
                    <field name="name" filter_domain="['|', ('name', 'ilike', self)"/>
                    <field name="website"/>
                    <field name="description"/>
                    <group expand="0" string="Group By">
                        <filter string="Name" name="product_brand_name" domain="[]" context="{'group_by': 'name'}"/>
                        <filter string="Website" name="product_brand_website" domain="[]" context="{'group_by': 'website'}"/>
                        <filter string="Description" name="product_brand_description" domain="[]" context="{'group_by': 'description'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="actions_product_brand" model="ir.actions.act_window">
            <field name="name">Product Brand</field>
            <field name="res_model">product.brand</field>
            <field name="view_mode">list,form</field>
        </record>



    </data>
</odoo>
