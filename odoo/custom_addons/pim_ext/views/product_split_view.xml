                                                       </div>
                                                       <div>
                                                           <div>
                                                               <group>
                                                                   <label for="id" string="Product ID" style="font-weight:bold;" required="True"/>
                                                               </group>
                                                           </div>
                                                       </div>
                                                       <div>
                                                           <field name="id" nolabel="1"
                                                                  readonly="1" class="attribute_type_class attr_display_type"/>
                                                       </div>
                                                       <div id="o_type_properties">
                                                           <div id="o_type_properties_main" class="flex-grow-1">
                                                               <group>
                                                                   <label for="sku" string="SKU"/>
                                                               </group>
                                                           </div>
                                                       </div>
                                                       <div>
                                                           <field name="sku" nolabel="1"
                                                                  class="attribute_type_class"/>
                                                       </div>
                                                       <div id="o_type_properties">
                                                           <div id="o_type_properties_main" class="flex-grow-1">
                                                               <group>
                                                                   <label for="family_id" string="Family"/>
                                                               </group>
                                                           </div>
                                                       </div>
                                                       <div>
                                                           <field name="family_id" nolabel="1"
                                                                  readonly="1"
                                                                  options="{'no_open': True, 'no_create': True}"
                                                                  class="attribute_type_class"/>
                                                       </div>
                                                       <div id="o_type_properties">
                                                           <div id="o_type_properties_main" class="flex-grow-1">
                                                               <group>
                                                                   <label for="create_date" string="Created date"/>
                                                               </group>
                                                           </div>
                                                       </div>
                                                       <div>
                                                           <field name="create_date" nolabel="1"
                                                                  readonly="1"
