                                    <field name="sku"/>
                                    <field name="family_id"/>
                                    <field name="brand_id"/>
                                    <field name="name"/>
                                    <field name="is_variant" optional="hide"/>
                                    <field name="variant_id" optional="hide"/>
                                    <field name="is_variant_values_updated" optional="hide"/>
                                    <field name="active_label"/>
                                    <field name="create_date"/>
                                    <field name="write_date"/>
                                    <button name="custom_product_open_form_view" string = " " icon="fa-edit" type="object" />
                                    <button name="custom_product_unlink" string = " " icon="fa-trash-o" type="object" />
                                </list>
                            </field>
                        </div>
                        <div class="right-column">
                            <form readonly="1" class="attribute_type">
                                <header>
                                    <button string="Back" type="object" icon="fa-arrow-left" name="action_back_to_product_menu"/>
