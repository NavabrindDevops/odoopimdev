<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_management_tree_view" model="ir.ui.view">
            <field name="name">Product Management</field>
            <field name="model">product.management</field>
            <field name="arch" type="xml">
                <tree create="false">
                    <header>
                    <button name="pim_product_creation" type="object" class="btn-primary"
                        string="Create" display="always"
                        />
                    </header>
                    <field name="name" optional="show"/>
                    <field name="sku" optional="show"/>
                    <field name="barcode" optional="show"/>
                    <field name="family_id" optional="show"/>
                    <field name="pim_category_id" optional="show"/>
                    <field name="chennel_id" optional="show"/>
                    <field name="revision" optional="show"/>
                    <field name="active" optional="show"/>
                </tree>
            </field>
        </record>

        <record id="product_managemnt_form_view" model="ir.ui.view">
            <field name="name">product management form view</field>
            <field name="model">product.management</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group string="General Information">
                                <field name="name"/>
                                <field name="sku"/>
                                <field name="moq"/>
                                <field name="description"/>
                                <field name="barcode"/>
                                <field name="active"/>
                                <field name="pim_category_id"/>
                                <field name="family_id"/>

                            </group>
                            <group string="Pricing And Inventory">
                                <field name="lst_price"/>
                                <field name="special_price"/>
                                <field name="special_price_start_date"/>
                                <field name="special_price_end_date"/>
                            </group>
                        </group>
                        <group>
                            <group string="Development History">
                                <field name="revision"/>
                                <field name="revision_date"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user" options="{'post_refresh': 'recipients'}"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="product_managemnt_search_view" model="ir.ui.view">
            <field name="name">product management search view</field>
            <field name="model">product.management</field>
            <field name="priority" eval="15"/>
            <field name="arch" type="xml">
                <search>
                    <field name="sku"/>
<!--                    <filter string="Active" name="filter_active" domain="[('active', '=', True)]"/>-->
<!--                    <filter string="Archived" name="filter_archived" domain="[('active', '=', False)]"/>-->
<!--                    <group expand="0" string="Group By">-->
<!--                        <filter string="Parent Category" name="parent_group" domain="[]"-->
<!--                                context="{'group_by': 'parent_id'}"/>-->
<!--                    </group>-->
                </search>
            </field>
        </record>

        <record id="product_managemnt_action" model="ir.actions.act_window">
            <field name="name">product management</field>
            <field name="res_model">product.management</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="product_management_main"
                  name="Product Management"
                  action="product_managemnt_action"
                  parent="product_management.menu_product_management_main"
                  />
    </data>
</odoo>
