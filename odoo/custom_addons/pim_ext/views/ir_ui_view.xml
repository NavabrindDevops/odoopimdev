<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_ir_ui_view_form_custom_view_inherit" model="ir.ui.view">
        <field name="name">custom.list.view.form.inherit</field>
        <field name="model">ir.ui.view</field>
        <field name="inherit_id" ref="base.view_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='xml_id']" position="after">
                <field name="custom_view"/>
                <field name="custom_filter"/>
            </xpath>
        </field>
    </record>

    <record id="list_ir_ui_view_custom_view" model="ir.ui.view">
        <field name="name">custom.list.view</field>
        <field name="model">ir.ui.view</field>
        <field name="arch" type="xml">
            <list editable="bottom" create="1" delete="1" string="Grid View" duplicate="0" default_order="create_date desc">
                <field name="name" string="Grid Template"/>
                <field name="create_uid"/>
                <field name="create_date"/>
                <field name="shared_user_id" column_invisible="1"/>
                <field name="user_view_parent_id" column_invisible="1" />
                <field name="share_user_ids" widget="many2many_tags"/>
                <field name="active" widget="boolean_toggle"/>
                <button name="unlink" type="object" icon="fa-trash" title='delete' string="Delete"/>
            </list>
        </field>
    </record>

    <record id="action_custom_list_views_product" model="ir.actions.act_window">
        <field name="name">Grid Template Views</field>
        <field name="res_model">ir.ui.view</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="list_ir_ui_view_custom_view"/>
        <field name="domain">[("active", "in", [True, False]), ('custom_view','=',True),('create_uid', '=', uid)]</field>
        <field name="context">{'default_custom_view': True}</field>
    </record>


    <menuitem id="menu_pim_custom_lists"
    action="action_custom_list_views_product" name="Manage Custom Lists"
    parent="pim_ext.menu_root_product_management" sequence="6"/>

</odoo>
