<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_tree_pim_categories" model="ir.ui.view">
            <field name="name">pim.categories.tree.view</field>
            <field name="model">product.category</field>
            <field name="arch" type="xml">
                <list create="false" default_order="create_date desc">
<!--                    <field name="code"/>-->
                    <field name="name"/>
                    <field name="parent_id"/>
                    <field name="complete_name"/>
<!--                    <field name="active" widget="boolean_toggle"/>-->
<!--                   <button name="category_master_unlink" type="object" icon="fa-trash" class="btn-link text-danger"/>-->
                </list>
            </field>
        </record>
        <record id="view_hierarchy_pim_categories" model="ir.ui.view">
            <field name="name">product.categories.hierarchy</field>
            <field name="model">product.category</field>
            <field name="arch" type="xml">
                <hierarchy child_field="child_id" draggable="1">
                    <field name="name"/>
                    <templates>
                        <t t-name="hierarchy-box">
                            <div t-attf-class="o_hierarchy_node_header d-flex justify-content-center align-items-center ">
                                <field name="name"/>
                            </div>
                        </t>
                    </templates>
                </hierarchy>
            </field>
        </record>
        <record id="view_form_pim_categories" model="ir.ui.view">
            <field name="name">pim.categories.form.view</field>
            <field name="model">product.category</field>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <form string="Category" create="false" edit="true" delete="false" class="page_form"
                      js_class="category_form_view">
                    <sheet>
                        <notebook>
                            <page string="General">
                                <group>
                                    <field name="name"/>
<!--                                    <field name="code"/>-->
                                    <field name="parent_id" readonly="1" />
                                    <field name="complete_name" readonly="1"/>
<!--                                    <field name="active" widget="boolean_toggle"/>-->
                                </group>
                            </page>
                            <page string="History">
                                <group>
<!--                                    <field name="history_log" nolabel="1" readonly="1"/>-->
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_pim_category_filter" model="ir.ui.view">
            <field name="name">Category</field>
            <field name="model">product.category</field>
            <field name="priority" eval="15"/>
            <field name="arch" type="xml">
                <search string="PIM Category">
<!--                    <field name="code"/>-->
                    <field name="name"/>
                    <field name="parent_id"/>
                    <field name="complete_name"/>
<!--                    <filter string="Active" name="filter_active" domain="[('active', '=', True)]"/>-->
<!--                    <filter string="Archived" name="filter_archived" domain="[('active', '=', False)]"/>-->
                    <group expand="0" string="Group By">
<!--                        <filter string="Code" name="category_code" domain="[]"-->
<!--                                context="{'group_by': 'code'}"/>-->
                        <filter string="Name" name="category_name" domain="[]"
                                context="{'group_by': 'name'}"/>
                        <filter string="Parent Category" name="parent_group" domain="[]"
                                context="{'group_by': 'parent_id'}"/>
                        <filter string="Complete Name" name="parent_complete_name" domain="[]"
                                context="{'group_by': 'complete_name'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_pim_categories" model="ir.actions.act_window">
            <field name="name">Category</field>
            <field name="res_model">product.category</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="pim_ext.view_form_pim_categories"/>
        </record>

        <menuitem id="menu_pim_categories"
                  name="Manage Categories"
                  action="action_pim_categories"
                  parent="pim_ext.menu_root_product_management"
                  sequence="40"/>

        <record id="view_category_master_unlink_wizard_form" model="ir.ui.view">
            <field name="name">category.master.unlink.wizard.form</field>
            <field name="model">category.master.unlink.wizard</field>
            <field name="arch" type="xml">
                <form string="Confirm Deletion">
                    <group>
                        <div style="justify-content: center; align-items: center; white-space: nowrap; margin: 10px 0;">
                            <p style="margin: 0; font-size: 14px;">
                                Are you sure you want to delete this category?
                            </p>
                        </div>
                    </group>
                    <footer>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                        <button string="Delete" class="btn-primary" type="object" name="confirm_unlink"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
