<odoo>
    <data>
        <!-- Define the custom layout view -->
        <record id="view_split_family_view_custom" model="ir.ui.view">
            <field name="name">family.split.view.custom.layout</field>
            <field name="model">family.attribute</field>
            <field name="arch" type="xml">
                <form string="Family" create="true" edit="true" delete="false" class="page_form">
                    <div class="d-flex align-items-start">
                        <div class="left-column">
                            <field name="family_ids">
                                <list editable="bottom" create="false" edit="false" delete="false" default_order="create_date desc">
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="description"/>
                                    <button name="attribute_family_open_form_view" type="object" icon="fa-pencil-square-o" class="btn-link"/>
                                    <button name="attribute_family_unlink" type="object" icon="fa-trash" class="btn-link text-danger"/>
                                </list>
                            </field>
                        </div>
                        <div class="right-column">
                            <form create="false" edit="false" delete="false" readonly="1" class="attribute_type">
                                <header>
                                    <button string="Back" type="object" icon="fa-arrow-left" name="action_back_to_menu"/>
                                </header>
<!--                                <div class="pim_oe_title">-->
<!--                                    <h2 class="pim_create_attribute"><span class="attr_title">Edit Family</span></h2>-->
<!--                                </div>-->
                                <div class="pim_oe_title" invisible="not is_create_mode">
                                    <h2 class="pim_create_attribute"><span class="attr_title">Create Family</span></h2>
                                </div>
                                <div class="pim_oe_title" invisible="is_create_mode">
                                    <h2 class="pim_create_attribute"><span class="attr_title">Edit Family</span></h2>
                                </div>
                            </form>
                            <form>
                                <div class="o_col_6 col-12 attr_form">
                                   <div class="attr_properties">
                                       <sheet class="attr_sheet">
                                           <div class="oe_title">
                                               <h1 class="name"><field name="name" readonly="1" class="oe_inline"/></h1>
                                           </div>
                                           <notebook>
                                               <page name="Properties">
                                                   <group>
                                                       <group string="General Properties">
                                                           <field name="name"/>
                                                           <field name="code"/>
                                                       </group>
                                                   </group>
                                                   <group>
                                                       <group string="Label Translation">
                                                           <field name="attribute_label"/>
                                                       </group>
                                                   </group>
                                               </page>
                                               <page name="attibute_list" string="Attributes">
                                                   <br/>
                                                   <div style="display:flex; gap:10px; width:max-content;">
                                                       <button name="action_open_attribute_group_wizard" type="object" string="Add By Groups" class="oe_button btn-primary"/>
                                                       <button name="action_open_add_attribute_wizard" type="object" string="Add Attribute" class="oe_button btn-primary"/>
                                                   </div>
                                                   <field name="exist_attribute_ids" string="Exist Attributes" widget="many2many_tags" invisible="1"/>
                                                   <field name="exist_group_ids" string="Exist Attribute Group" widget="many2many_tags" invisible="1"/>
                                                   <br/>
                                                   <field name="family_attribute_ids">
                                                       <list editable="bottom" edit="false" create="false" default_order="create_date desc">
                                                            <field name="attribute_group_id" widget="many2one"
                                                                   options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"
                                                                   group_by="attribute_group_id"/>
                                                           <field name="attribute_id"/>
                                                       </list>
                                                   </field>
                                               </page>
                                               <page name="variant_rec" string="Variants">
                                                   <br/>
                                                   <div style="display:flex; gap:10px; width:max-content;">
                                                       <button name="action__add_variant_wizard" type="object" string="Add Variant" class="oe_button btn-primary"/>
                                                   </div>
                                                   <br/>
                                                   <field name="variant_line_ids">
                                                       <list create="false" edit="false" default_order="create_date desc">
                    <!--                                    <field name="variant_id" string="Variant" invisible="1"/>-->
                                                           <field name="name"/>
                                                           <field name="variant_familiy_id" column_invisible="True"/>
                                                           <field name="variant_ids" string="Variants" widget="many2many_tags"/>
                                                       </list>
                                                   </field>
                                               </page>
                                               <page name="History">
                                                   <group>
                                                       <field name="history_log" nolabel="1" readonly="1"/>
                                                   </group>
                                               </page>
                                           </notebook>
                                       </sheet>
                                   </div>
                                </div>
                            </form>
                            <div class="attr_creation" style="margin-top: 16px;">
                                <button type="object" string="Save"
                                       name="save_family" class="oe_highlight"/>
                            </div>
                        </div>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_family_attribute_filter" model="ir.ui.view">
            <field name="name">Family Attribute Search</field>
            <field name="model">family.attribute</field>
            <field name="priority" eval="15"/>
            <field name="arch" type="xml">
                <search string="Family Attribute">
                    <group expand="0" string="Group By">
                        <field name="code"/>
                        <field name="description"/>
                        <filter string="Family Group Name" name="family_attribute" domain="[]" context="{'group_by': 'name'}"/>
                        <filter string="Code" name="family_code" domain="[]" context="{'group_by': 'code'}"/>
                    </group>
                </search>
            </field>
        </record>


        <record id="view_family_attribute_tree" model="ir.ui.view">
            <field name="name">Family</field>
            <field name="model">family.attribute</field>
            <field name="arch" type="xml">
                <list string="Family Attribute" create="false" delete="false" default_order="create_date desc">
                    <header>
                        <button name="create_pim_attribute_family" type="object" class="btn-primary"
                            string="Create Family" display="always"
                            invisible="context.get('active_model', 'family.attribute') != 'family.attribute'"/>
                    </header>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="description"/>
                    <button name="attribute_family_open_form_view" string = " " icon="fa-edit" type="object" />
                    <button name="attribute_family_unlink" string = " " icon="fa-trash-o" type="object" />
                </list>
            </field>
        </record>

        <record id="action_family_view" model="ir.actions.act_window">
            <field name="name">Families</field>
            <field name="res_model">family.attribute</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('company_id', 'in', allowed_company_ids)]</field>
            <field name="view_ids" eval="[(5, 0, 0),(0, 0, {'view_mode': 'list', 'view_id': ref('view_family_attribute_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('view_split_family_view_custom')}),
                ]"/>
            <field name="search_view_id" ref="view_family_attribute_filter"/>
            <field name="context">{'search_default_name': 1}</field>
        </record>


        <record id="view_attribute_family_unlink_wizard_form" model="ir.ui.view">
            <field name="name">attribute.family.unlink.wizard.form</field>
            <field name="model">attribute.family.unlink.wizard</field>
            <field name="arch" type="xml">
                <form string="Confirm Deletion">
                    <group>
                        <div style="justify-content: center; align-items: center; white-space: nowrap; margin: 10px 0;">
                            <p style="margin: 0; font-size: 14px;">
                                Are you sure you want to delete this family?
                            </p>
                        </div>
                    </group>
                    <footer>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                        <button string="Delete" class="btn-primary" type="object" name="confirm_unlink"/>
                    </footer>
                </form>
            </field>
    </record>

    </data>
</odoo>
