<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_pim_channel_tree" model="ir.ui.view">
        <field name="name">pim.channel.tree</field>
        <field name="model">pim.channel</field>
        <field name="arch" type="xml">
            <tree string="Channels" create="false">
                <header>
                    <button name="create_pim_channels" type="object" class="btn-primary"
                        string="Create Channel" display="always"
                        invisible="context.get('active_model', 'pim.channel') != 'pim.channel'"/>
                </header>
                <field name="name"/>
                <field name="currency_id"/>
                <field name="locale_id"/>
                <field name="category_id"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_pim_channel_form" model="ir.ui.view">
        <field name="name">pim.channel.form</field>
        <field name="model">pim.channel</field>
        <field name="arch" type="xml">
            <form string="Channels" create="false">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="currency_id" options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                        <field name="locale_id" options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                        <field name="category_id" options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user" options="{'post_refresh': 'recipients'}"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action to Open PIM Channels -->
    <record id="action_pim_channel" model="ir.actions.act_window">
        <field name="name">Channels</field>
        <field name="res_model">pim.channel</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_pim_channel_root"
              name="Channels"
              parent="pim_ext.pim_configuraion"
              sequence="50"
              action="action_pim_channel"/>
</odoo>
