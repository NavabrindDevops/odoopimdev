<odoo>
    <record id="view_attachment_form_inherit" model="ir.ui.view">
        <field name="name">ir.attachment.form.inherit</field>
        <field name="model">ir.attachment</field>
        <field name="inherit_id" ref="base.view_attachment_form"/>  <!-- Reference the existing form view -->
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type']" position="after">
                <field name="name_model" />
            </xpath>
        </field>
    </record>
</odoo>
